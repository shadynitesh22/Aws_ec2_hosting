# https://editorconfig.org/

root = true

[*]
end_of_line = lf

# Set default charset
[*.{js,py}]
charset = utf-8

[*.py]
max_line_length = 119
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.json]
indent_size = 2
insert_final_newline = false